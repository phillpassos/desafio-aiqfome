      "properties": {
        "id": {
          "type": "number",
          "example": 1
        }
      }
    },
    "Rating": {
      "type": "object",
      "properties": {
        "rate": {
          "type": "number",
          "example": 3.9
        },
        "count": {
          "type": "number",
          "example": 120
        }
      }
    },
    "Credenciais": {
      "type": "object",
      "properties": {
        "nome": {
          "type": "string",
          "example": "admin"
        },
        "email": {
